use Probe as knowledge.
use ProbeActions.
order = linearall.

module ProbeEvent {
	% When we get sent a task
	if (_).sent!(task(Task, Target)) then {
		% Drop existing task
		if goal(task(OldTask, OldTarget)) then
			drop(task(OldTask, OldTarget)).

		% Always adopt the task
		if true then adopt(task(Task, Target)).

		% For our initial starting with gathering
		if bel(Task == 'gatherMinerals') then
			gather(Target).
	}
}